<!-- base.layout.tmpl -->

{{define "base"}}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Meta tags for responsive layout -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS for styling -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">

    <!-- Bootstrap JS bundle for interactivity -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
        crossorigin="anonymous"></script>

    <!-- Optional CSS block for page-specific styles -->
    {{block "css" .}}
    {{end}}

    <title>Home</title>
</head>

<body>

    <!-- Main content block to be overridden by page templates -->
    {{block "content" .}}
    {{end}}

    <!-- Optional JS block for page-specific scripts -->
    {{block "js" .}}
    {{end}}

</body>

</html>
{{end}}